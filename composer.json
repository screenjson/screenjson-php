{
    "name": "screenjson/screenjson-php",
    "description": "PHP SDK for ScreenJSON",
    "homepage": "https://github.com/screenjson/screenjson-php",
    "keywords": [
        "screenjson",
        "screenplay",
        "screenwriting",
        "final-draft-pro",
        "fade-in-pro",
        "fountain",
        "celtx"
    ],
    "license": "CC BY-ND 4.0",
    "authors": [
        {
            "name": "Alex Coppen",
            "email": "azcoppen@protonmail.com"
        }
    ],
    "support": {
        "source": "https://github.com/screenjson/screenjson-php",
        "docs": "https://github.com/screenjson/screenjson-php/blob/main/README.md",
        "issues": "https://github.com/screenjson/screenjson-php/package-name/issues"
    },
    "type": "library",
    "require": {
        "php": "^8.0",
        "ext-sodium": "*",
        "ext-xml": "*",
        "ext-yaml": "*",
        "ext-zip": "*",
        "karuna/fountain": "*",
        "nesbot/carbon": "^3.0",
        "opis/json-schema": "^2.3",
        "ottosmops/pdftotext": "^2.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "pestphp/pest": "^2.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpmd/phpmd" : "^2.6"
    },
    "autoload": {
        "psr-4": {
            "ScreenJSON\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ScreenJSON\\Laravel\\ScreenjsonSDKServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "pest": [
            "@php vendor/bin/pest"
        ],
        "psr12-check": [
            "@php vendor/bin/phpcs --standard=PSR12 src/"
        ],
        "psr12-autofix": [
            "@php vendor/bin/phpcbf --standard=PSR12 src/"
        ],
        "docs": [
            "@php vendor/bin/phpdoc -d \"src\" -t \"docs\""
        ]
    },
        "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
