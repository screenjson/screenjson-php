{
    "name": "azcoppen/screenjson-php",
    "description": "PHP SDK for ScreenJSON",
    "homepage": "https://github.com/alexc-hollywood/screenjson-php",
    "keywords": [
        "jeromes",
        "composer",
        "package"
    ],
    "license": "Proprietary",
    "authors": [
        {
            "name": "Alex Cameron",
            "email": "alex.cameron@jeromes.com"
        }
    ],
    "support": {
        "source": "https://github.com/alexc-hollywood/screenjson-php",
        "docs": "https://github.com/alexc-hollywood/screenjson-php/blob/main/README.md",
        "issues": "https://github.com/alexc-hollywood/screenjson-php/package-name/issues"
    },
    "type": "project",
    "require": {
        "php": "^7.2|^8.0",
        "ext-xml": "*",
        "ext-yaml": "*",
        "ext-sodium": "*",
        "ext-zip": "*",
        "ramsey/uuid": "*",
        "nesbot/carbon": "*",
        "justinrainbow/json-schema": "*",
        "swaggest/json-schema": "*",
        "xrstf/fountain": "*",
        "ottosmops/pdftotext": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "pestphp/pest": "^2.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpmd/phpmd" : "^2.6",
        "phpdocumentor/phpdocumentor" : "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ScreenJSON\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "pest": [
            "@php vendor/bin/pest"
        ],
        "psr12-check": [
            "@php vendor/bin/phpcs --standard=PSR12 src/"
        ],
        "psr12-autofix": [
            "@php vendor/bin/phpcbf --standard=PSR12 src/"
        ],
        "docs": [
            "@php vendor/bin/phpdoc -d \"src\" -t \"docs\""
        ]
    },
        "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
